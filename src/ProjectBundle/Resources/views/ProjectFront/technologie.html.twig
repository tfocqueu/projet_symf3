{% extends "::base.html.twig" %}

{% block body %}
    <h1> Suivi des Technologies </h1>
    <div class="col-md-6">
        <h2>Listes des technologies</h2>
        <table>
            <thead>
            <th>Intitul√©</th>
            <th>Actions</th>
            </thead>
            <tbody>
            {% for technos in lesTechnologies %}
                <tr>
                    <td>
                        {{ technos.libelleTechnologie }}
                    </td>
                    <td>
                        <a href="{{ path('techno_delete',{'technologie' : technos.id}) }}">Supprimer la technologie</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
    <div class="col-md-6">
        <h2>Ajouter une technologie</h2>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <br/>
        <button type="submit" class="btn btn-success">Ajout de la technologie</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
